<div class='tiptap' data-questao-id="{{question.id}}">
    <div class='questao-completa {{#unless options.quebraQuestao}}dontsplit{{/unless}}'>
        {{#if question.title}}
        <div
            style="font-size: 16px; font-weight: bold; text-transform: uppercase; margin-bottom: 10px; text-align: center;">
            {{question.title}}</div>
        {{/if}}
        {{> reference }}
        <div class='cabecalho-questao dontend'>
            {{> header }}
        </div>
        {{> body }}
    </div>
    {{> responseBox }}
    {{#if options.gabarito}}
    {{{question.visualizaResposta}}}
    {{/if}}
    <div>{{{repeat "<br>" question.linhasBranco}}}</div>
    {{#if question.quebraPagina}}
    <div class='quebra-pagina'></div>
    {{/if}}
</div>